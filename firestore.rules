rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    match /{document=**} {
      allow read, write: if false;
    }
    
    match /pastes/{pasteId} {
    	allow get;
      allow create: if request.resource.data.keys().hasOnly(['content']) && request.resource.data['content'].size() > 0;
    }
  }
}